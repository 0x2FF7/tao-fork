#! Utilities for working with values.

fn identity A : A -> A =
    \ x => x

# Default

class Default =
    => default : Self

def default A < Default : A = A.default

member Nat of Default =
    => default = Nat.zero

for A < Default, B < Default member (A, B) of Default =
    => default = (A.default, B.default)

# Maybe

data Maybe A =
    | Just A
    \ None

for A member Maybe A of Default =
    => default = None
