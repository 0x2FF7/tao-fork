import "lib/core/ops.tao"

$[lang(bool)]
data Bool =
    | False
    \ True

member Bool of Not =
    => Output = Self
    => not = fn
        | True => False
        \ False => True

member Bool of And Bool =
    => Output = Bool
    => and_ = fn
        | True, True => True
        \ _, _ => False

member Bool of Or Bool =
    => Output = Bool
    => or_ = fn
        | False, False => False
        \ _, _ => True
